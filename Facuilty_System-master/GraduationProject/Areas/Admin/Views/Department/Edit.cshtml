@model Models.Department

@{
    ViewData["Title"] = "Edit Department";
}
 
<hr />
<div class="row">
    <div class="col-md-11">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfStudent" class="control-label"></label>
                <input asp-for="NumOfStudent" class="form-control" />
                <span asp-validation-for="NumOfStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfCourses" class="control-label"></label>
                <input asp-for="NumOfCourses" class="form-control" />
                <span asp-validation-for="NumOfCourses" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg w-100" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
